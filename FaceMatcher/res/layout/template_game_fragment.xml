<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fullscreen_content_controls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical">
  
    <LinearLayout
    android:id="@+id/navigation_controls"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="top|fill_horizontal"
    android:orientation="horizontal">
    
    <Button
        android:id="@+id/button_go_home"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:background="#0055cc"
        android:text="@string/go_home_button" />

    <Button
        android:id="@+id/show_leaderboard"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="#0055cc"
        android:text="@string/show_leaderboard_button" />
    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/game_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#0099cc"
        android:fitsSystemWindows="true" />
</LinearLayout>