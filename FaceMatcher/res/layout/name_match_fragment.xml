<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/name_match_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/game_feedbacks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|fill_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/player_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_string"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/banner_name_match"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/image_type"
        android:background="#99CC00"
        android:src="@drawable/banner_game01" />

    <ImageView
        android:id="@+id/face_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/image_type"
        android:src="@drawable/deniro" />

    <RadioGroup
        android:id="@+id/name_options"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_weight="1" >

        <RadioButton
            android:id="@+id/name_option_1"
            android:layout_gravity="center_vertical"
            android:background="#FF00CC"
            android:onClick="onRadioButtonClicked"
            android:text="Dmitri Mendeleev"
            android:textSize="26sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/name_option_2"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="Jonas Salk"
            android:textSize="26sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/name_option_3"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="John Carmack"
            android:textSize="26sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/name_option_4"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="Robert De Niro"
            android:textSize="26sp"
            android:textStyle="bold" />
    </RadioGroup>

</LinearLayout>