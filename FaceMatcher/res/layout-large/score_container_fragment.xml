<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/banner_name_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:contentDescription="@string/image_type"
        android:scaleType="centerInside"
        android:src="@drawable/banner_leaderboard" />

    <FrameLayout
        android:id="@+id/score_fragment1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true" />

    <FrameLayout
        android:id="@+id/score_fragment2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true" />

    <FrameLayout
        android:id="@+id/score_fragment3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true" />

</LinearLayout>